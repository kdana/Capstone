<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="10"
    android:background="@color/blue"
    android:padding="20dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal">

        <!-- Placeholder for image button -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="Profile Picture"
            android:id="@+id/picture"
            android:layout_weight="3"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:paddingLeft="20dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="My Name"
                android:textColor="@color/white"
                android:ems="10"
                android:id="@+id/name"
                android:layout_weight="1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Busy"
                android:textColor="@color/white"
                android:id="@+id/status"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Likes:"
        android:gravity="bottom"
        android:textColor="@color/white"
        android:id="@+id/likesTitle"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/likes"
        android:text="Your likes here"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Dislikes:"
        android:textColor="@color/white"
        android:gravity="bottom"
        android:id="@+id/dislikesTitle"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/dislikes"
        android:text="Your dislikes here"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Schedule"
        android:layout_marginRight="200dp"
        android:id="@+id/schedule"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Events:"
        android:textColor="@color/white"
        android:id="@+id/eventsTitle"
        android:gravity="bottom"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Your events here"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:id="@+id/events"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Add to Group"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:id="@+id/profileButton"
        android:layout_weight="1" />
</LinearLayout>